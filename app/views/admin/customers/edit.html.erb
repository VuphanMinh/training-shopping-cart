<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Customer</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item active">ユーザー詳細</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<%# ========= Content ========= %>
<section class="content">
  <div class="container-fluid">
    <div class="card p-3">

        <%= form_for (@customer), url: admin_customer_path, html: { method: :patch } do |f|   %>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :name, class: 'col-form-label' %>
            </div>
            <div class="col-sm-6">
              <%= f.text_field :name, class: 'form-control', placeholder: '' %>
              <%= show_error(@customer, :name)  %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :phone, class: 'col-form-label' %>
            </div>
            <div class="col-sm-6">
              <%= f.text_field :phone, class: 'form-control', placeholder: '' %>
              <%= show_error(@customer, :phone)  %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :email, class: 'col-form-label' %>
            </div>
            <div class="col-sm-6">
              <%= f.email_field :email, class: 'form-control' %>
              <%= show_error(@customer, :email)  %>
            </div>
          </div>
          <div class="custom-group-button">
            <button class="btn btn-secondary pl-3 pr-3" data-dismiss="modal" type="submit"> Cancel</button>
            <%= f.submit 'Save', class: 'btn btn-success pl-3 pr-3' %>
          </div>
        <% end %>

    </div>
  </div>
</section>
