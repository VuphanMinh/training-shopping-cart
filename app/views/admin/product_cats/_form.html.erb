 <%= form_for product_cat, url: url do |f| %>
  <div class="form-group row">
    <div class="col-sm-2">
       <%= f.label :name, class: 'col-form-label' %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :name, class: 'form-control', placeholder: '' %>
      <%= show_error(@product_cat, :name)  %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :typeProduct, class: 'col-form-label' %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :typeProduct, class: 'form-control', placeholder: '' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= f.text_area :description, class: 'form-control tinyMCE', :rows => 3 %>
    </div>
  </div>
  <div class="custom-group-button">
    <%= f.submit 'Save', class: 'btn btn-success pl-3 pr-3' %>
  </div>
<% end %>
