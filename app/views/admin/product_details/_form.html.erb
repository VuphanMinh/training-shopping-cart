<%= form_for @product_detail, url: url do |f| %>
 <%= f.hidden_field :product_cat_id, :value => product_cat_id %>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :name, class: 'col-form-label' %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :name, class: 'form-control', placeholder: '' %>
      <%= show_error(@product_detail, :name)  %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :price, class: 'col-form-label' %>
    </div>
    <div class="col-sm-6">
        <%= f.text_field :price, class: 'form-control mr-3', placeholder: '' %>
        <%= show_error(@product_detail, :price)  %>
    </div>
    <span class="col-sm-4">VnÄ‘</span>
  </div>
  <div class="form-group row">
    <%= f.label :discount, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-6">
        <%= f.text_field :discount, class: 'form-control mr-2', placeholder: '' %>
      <%= show_error(@product_detail, :discount)  %>
    </div>
    <span class="col-sm-4">%</span>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= f.text_area :description, class: 'form-control tinyMCE', :rows => 3 %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :details, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-6">
      <%= f.text_area :details, class: 'form-control tinyMCE', :rows => 3 %>
    </div>
  </div>
  <div class="custom-group-button">
    <button class="btn btn-secondary pl-3 pr-3" data-dismiss="modal" type="submit"> Cancel</button>
    <%= f.submit 'Save', class: 'btn btn-success pl-3 pr-3' %>
  </div>
<% end %>
